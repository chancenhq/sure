<% if @previous_step_path.present? %>
  <%= content_for :previous_path, @previous_step_path %>
<% end %>

<%= content_for :header_nav do %>
  <%= render "partner_onboardings/onboarding_nav", user: @user %>
<% end %>

<%= content_for :cancel_action do %>
  <%= render "partner_onboardings/logout" %>
<% end %>

<%= content_for :footer do %>
  <%= render "layouts/shared/footer" %>
<% end %>

<div class="grow max-w-lg w-full mx-auto bg-surface flex flex-col justify-center md:py-0 py-6 px-4 md:px-0">
  <div>
    <div class="space-y-1 mb-6 text-center">
      <h1 class="text-2xl font-medium md:text-2xl"><%= current_partner&.translation(:onboarding, :goals, :heading, product: product_name, default: t("partner_onboardings.goals.heading", product: product_name)) %></h1>
      <p class="text-secondary text-sm"><%= current_partner&.translation(:onboarding, :goals, :subheading, product: product_name, default: t("partner_onboardings.goals.subheading", product: product_name)) %></p>
    </div>

    <%= form_with model: @user do |form| %>
      <%= form.hidden_field :redirect_to, value: (@redirect_after_submit || (self_hosted? ? "home" : "partner_onboarding_trial")) %>
      <%= form.hidden_field :set_onboarding_goals_at, value: Time.current %>
      <%= form.hidden_field :onboarded_at, value: Time.current %>

      <% goal_options = [
        { icon: "layers", key: :isa },
        { icon: "pie-chart", key: :budgeting },
        { icon: "banknote", key: :spending },
        { icon: "users", key: :emergency_fund },
        { icon: "bot", key: :ai_insights },
        { icon: "graduation-cap", key: :graduation },
        { icon: "area-chart", key: :investing },
        { icon: "frown", key: :reduce_stress }
      ] %>

      <div class="space-y-3">
        <% goal_options.each do |goal| %>
          <label class="flex items-center gap-2.5 p-4 rounded-lg border border-tertiary cursor-pointer hover:bg-container transition-colors [&:has(input:checked)]:border-solid [&:has(input:checked)]:bg-container">
            <%= form.check_box :goals, { multiple: true, class: "sr-only" }, goal[:key], nil %>
            <%= icon goal[:icon] %>
            <span class="text-primary text-sm"><%= current_partner&.translation(:onboarding, :goals, :options, goal[:key], default: t("partner_onboardings.goals.options.#{goal[:key]}")) %></span>
          </label>
        <% end %>
      </div>

      <div class="mt-6">
        <%= render DS::Button.new(
          text: current_partner&.translation(:onboarding, :goals, :submit, default: t("partner_onboardings.goals.submit")),
          full_width: true
        ) %>
      </div>
    <% end %>
  </div>
</div>
